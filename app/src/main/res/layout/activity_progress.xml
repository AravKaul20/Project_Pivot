<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ProgressActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† BACK"
            android:textColor="@color/accent_green"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAINING_PROGRESS"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Weekly Progress Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/weeklyProgressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="weekly_sessions"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/weeklySessionsValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/accent_green"
                        android:textSize="32sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â†— +3_from_last_week"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Accuracy Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/accuracyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="overall_accuracy"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/overallAccuracyValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.0%"
                        android:textColor="@color/accent_green"
                        android:textSize="32sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â†— +5.2%_improvement"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Streak Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/streakCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="current_streak"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/streakValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0_days"
                        android:textColor="@color/accent_green"
                        android:textSize="32sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ keep_it_up!"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Detailed Progress Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="detailed_breakdown"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Stance Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="stance_accuracy"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/stancePercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/accent_green"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/stanceProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/accent_green"
                    android:progressBackgroundTint="@color/text_secondary" />

            </LinearLayout>

            <!-- Execution Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/card_background"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="execution_accuracy"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/executionPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/accent_green"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/executionProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/accent_green"
                    android:progressBackgroundTint="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 