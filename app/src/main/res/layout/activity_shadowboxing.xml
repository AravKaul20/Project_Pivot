<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ShadowboxingActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† BACK"
            android:textColor="@color/accent_green"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¥Š SHADOWBOXING"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:alpha="0" />

    </LinearLayout>

    <!-- Main Timer Section -->
    <LinearLayout
        android:id="@+id/timerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Round Display -->
        <TextView
            android:id="@+id/roundDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROUND_1/3"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Phase Display -->
        <TextView
            android:id="@+id/phaseDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WORK"
            android:textColor="@color/accent_green"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Timer Display -->
        <TextView
            android:id="@+id/timerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:00"
            android:textColor="@color/text_primary"
            android:textSize="72sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/roundProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/accent_green"
            android:progressBackgroundTint="@color/text_secondary"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/timerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/startPauseButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START"
                android:textColor="@color/accent_green"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/resetButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESET"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Settings Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/controlButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="workout_settings"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/roundsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3_rounds"
                        android:textColor="@color/accent_green"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rounds"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/text_secondary"
                    android:alpha="0.3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/workTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3min_work"
                        android:textColor="@color/accent_green"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="work_time"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/text_secondary"
                    android:alpha="0.3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/restTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1min_rest"
                        android:textColor="@color/accent_green"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rest_time"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout> 